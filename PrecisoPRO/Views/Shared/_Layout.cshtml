    <script>
        $(function () {
            // Função para verificar se a barra lateral está fechada
            function isSidebarClosed() {
                return $('.sidebar').hasClass('close');
            }

            // Adiciona um ouvinte de eventos aos elementos com atributo 'data-bs-toggle="tooltip"'
            $('[data-bs-toggle="tooltip"]').tooltip({
                // Exibe ou oculta o tooltip com base na condição
                enabled: isSidebarClosed(),
            });

            // Adiciona um ouvinte de eventos para ajustar a visibilidade do tooltip ao abrir/fechar a barra lateral
            $('.toggle').click(function () {
                const tooltips = $('[data-bs-toggle="tooltip"]').data('bs.tooltip');
                tooltips.forEach(tooltip => {
                    tooltip.config.enabled = isSidebarClosed();
                });
            });
        });
    </script>


